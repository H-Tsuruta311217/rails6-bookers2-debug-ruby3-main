<div class="d-flex justify-content-center mb-2">
  <% @entries.each do |e| %>
    <% if @myUserId != e.user.id %>
        <h2><%= e.user.name %>さんとのチャット</h2>
    <% end %>
  <% end %>
</div>
  <div id="messages">
   <% if @messages.present? %>
     <% @messages.each do |m| %>
       <% @myUserId == m.user.id  %>
       <p><%= m.user.name %></p>
         <div class="rounded bg-secondary text-white text-break mw-100" style="max-width:50%;"><%= m.message %></div>
     <% end %>
   <% end %>
<div class="row">
  <%= form_with model: @message do |f| %>
    <div class="d-flex justify-content-center">
      <%= f.text_field :message ,class:"w-75" ,placeholder: "メッセージを入力して下さい" , size: 50, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
    </div>
   <% end %>
  </div>
